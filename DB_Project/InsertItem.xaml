<Window x:Class="DB_Project.InsertItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="insertItem" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="title" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" FontFamily="Ariel" FontStyle="Italic" FontWeight="Bold" Text="Insert" Foreground="Salmon"/>
        <StackPanel x:Name="stackFields" Grid.Row="1"/>
        <Button x:Name="insertBtn" Content="Insert" Click="insertBtn_Click" Grid.Row="2"/>
    </Grid>
</Window>
