<Window x:Class="DB_Project.ManageTable"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ManageTable" xmlns:local="clr-namespace:DB_Project" MaxWidth="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="title" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" FontFamily="Ariel" FontStyle="Italic" FontWeight="Bold" Text="Party" Foreground="Salmon"/>
        <local:ResultView x:Name="resultView" Grid.Row="1"/>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" x:Name="delBtn" Click="delBtn_Click">
                <Image Source="Images\delete.jpg"/>
            </Button>
            <Button Grid.Column="1">
                <Image Source="Images\update2.png"/>
            </Button>
            <Button Grid.Column="2" Click="insertBtn_Click">
                <Image Source="Images\add.png"/>
            </Button>
        </Grid>
    </Grid>
</Window>
